module(
    name = "{{ .ProjectName }}",
    version = "0.0.1",
)

bazel_dep(name = "rules_cc", version = "0.0.9")

{{ range $name, $m := .SelectedModules }}
bazel_dep(
    name = "{{ $name }}",
    version = "{{ $m.Version }}",
)

git_override(
    module_name = "{{ $name }}",
    remote = "{{ $m.Repo }}",
    commit = "{{ $m.Hash }}",
)
{{ end }}
