module(
    name = "{{ .ProjectName }}",
    version = "0.0.1",
)

bazel_dep(name = "trlc")
git_override(
    module_name = "trlc",
    remote = "https://github.com/bmw-software-engineering/trlc.git",
    commit = "650b51a47264a4f232b3341f473527710fc32669",  # trlc-2.0.2 release
)

# C/C++ rules for Bazel
bazel_dep(name = "rules_cc", version = "0.2.1")

{{ range $name, $m := .SelectedModules }}
# {{ $name }}

bazel_dep(
    name = "{{ $name }}",
    version = "{{ $m.Version }}",
)

git_override(
    module_name = "{{ $name }}",
    remote = "{{ $m.Repo }}",
    commit = "{{ $m.Hash }}",
)
{{ end }}
